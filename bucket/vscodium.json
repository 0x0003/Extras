    "post_install": [
        "if(Test-Path(\"$dir\\vscodium-install-context.reg\")) {",
        "  $codepath = \"$dir\\VSCodium.exe\".Replace('\\', '\\\\')",
        "  $content = Get-Content \"$dir\\vscodium-install-context.reg\"",
        "  $content = $content.Replace('$code', $codepath)",
