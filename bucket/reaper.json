            "Remove-Item \"$dir\\`$INSTDIR`$_8_\" -Recurse",
            "Remove-Item \"$dir\\`$PLUGINSDIR\" -Recurse",
            "Remove-Item \"$dir\\`$COMMONFILES64\" -Recurse"
        ]
