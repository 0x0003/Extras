{
    "homepage": "https://www.mozilla.org/en-US/firefox/new/",
    "version": "60.0.2",
    "architecture": {
        "64bit": {
            "url": "https://download.mozilla.org/?product=firefox-60.0.2-SSL&os=win64&lang=en-US#/firefox-setup.exe",
            "hash": "0eac6b401d361149957b1d58748b5ee52a68ef0800ef45a018a9db50caa81016"
        },
        "32bit": {
            "url": "https://download.mozilla.org/?product=firefox-60.0.2-SSL&os=win&lang=en-US#/firefox-setup.exe",
            "hash": "4be171413234d252b37f9391731f57521771df4d11e738a38623b5550b12d5bd"
        }
    },
    "bin": "firefox.exe",
    "shortcuts": [
        [
            "firefox.exe",
            "Mozilla Firefox"
        ]
    ],
    "pre_install": "echo \"[Install]`nInstallDirectoryPath=$dir`nQuickLaunchShortcut=false`nDesktopShortcut=false`nStartMenuShortcuts=false\" | sc \"$dir\\install.ini\"",
    "installer": {
        "file": "firefox-setup.exe",
        "args": "/INI=$dir\\install.ini"
    },
    "uninstaller": {
        "file": "uninstall\\helper.exe",
        "args": "/S"
    },
    "checkver": {
        "url": "https://www.mozilla.org/en-US/firefox/all/",
        "re": "data-latest-firefox=\"([\\d.]+)\""
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.mozilla.org/?product=firefox-$version-SSL&os=win64&lang=en-US#/firefox-setup.exe",
                "hash": {
                    "find": "([a-fA-F0-9]{64})\\s+(?:win64/en-US/Firefox Setup ([\\d.]+).exe)",
                    "url": "https://download-installer.cdn.mozilla.net/pub/firefox/releases/$version/SHA256SUMS"
                }
            },
            "32bit": {
                "url": "https://download.mozilla.org/?product=firefox-$version-SSL&os=win&lang=en-US#/firefox-setup.exe",
                "hash": {
                    "find": "([a-fA-F0-9]{64})\\s+(?:win32/en-US/Firefox Setup ([\\d.]+).exe)",
                    "url": "https://download-installer.cdn.mozilla.net/pub/firefox/releases/$version/SHA256SUMS"
                }
            }
        }
    }
}
